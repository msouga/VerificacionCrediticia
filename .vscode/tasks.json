{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/VerificacionCrediticia.API/VerificacionCrediticia.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "start-angular",
            "type": "shell",
            "command": "npm start",
            "options": {
                "cwd": "${workspaceFolder}/src/VerificacionCrediticia.Angular"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Angular Live Development Server.*",
                    "endsPattern": ".*Compiled successfully.*|.*Application bundle generation complete.*"
                }
            }
        },
        {
            "label": "watch-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/VerificacionCrediticia.API/VerificacionCrediticia.API.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "kill-alldebug",
            "type": "shell",
            "command": "pkill -9 -f dotnet 2>/dev/null; pkill -9 -f 'ng serve' 2>/dev/null; pkill -9 -f 'angular' 2>/dev/null; lsof -ti:4200,5100,5000,7100 | xargs kill -9 2>/dev/null; echo 'Todos los procesos terminados'",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
